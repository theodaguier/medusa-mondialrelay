{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"lib": [
			"ES2022"
		],
		"declaration": true,
		"declarationMap": true,
		"outDir": ".medusa/server",
		"rootDir": "./src",
		"strict": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"moduleResolution": "Node16",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/"
	],
	"exclude": [
		".medusa",
		"node_modules",
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}